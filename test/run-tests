;;; Commentary:

;; Script to run Scame unit tests

;;; Code:

(let ((current-directory (file-name-directory load-file-name)))
  (add-to-list 'load-path current-directory)
  (require 'test-helper))


(defmacro with-scame-sandbox (&rest body)
  `(unwind-protect
       (progn
         (unless (f-dir? scame-test/sandbox-path)
           (f-mkdir scame-test/sandbox-path))
         (cleanup-load-path)
         (install-scame)
         (setup-scame scame-test/sandbox-path)
         (require 'scame)
         ,@body)))

(with-scame-sandbox
 ;;(print load-path)
 (load-unit-tests scame-test/test-path)
 (ert-run-tests-batch-and-exit t))
